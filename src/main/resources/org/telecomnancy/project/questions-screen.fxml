<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" styleClass="background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.telecomnancy.project.controller.QuestionsScreenController">
    <children>
      <HBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
         <children>
            <VBox minWidth="200.0">
               <children>
                      <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                          <image>
                              <Image url="@logo.png" />
                          </image>
                      </ImageView>
                      <Button maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onReturnButtonClick" prefWidth="100.0" text="quit test" />
                  <Region minHeight="10.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER_LEFT">
                     <children>
                            <Button fx:id="leftButton" mnemonicParsing="false" onAction="#toLeft" text="&lt;-" />
                     </children>
                  </HBox>
               </children>
            </VBox>
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
              <ImageView fx:id="questionImage" fitHeight="400.0" pickOnBounds="true" preserveRatio="true" />
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <VBox maxWidth="1.7976931348623157E308" prefHeight="150.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="currentQuestionLabel" text="Current Question: 0/?" />
                        <Label fx:id="answeredQuestionsLabel" text="Answered Questions: 0/?" />
                        <Label fx:id="rightAnswersLabel" layoutX="10.0" layoutY="28.0" minWidth="200.0" text="Right answers: 0%" />
                  <Region prefHeight="10.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                            <Button fx:id="rightButton" mnemonicParsing="false" onAction="#toRight" text="-&gt;" />
                     </children>
                  </HBox>
                    </children>
               <HBox.margin>
                  <Insets top="7.0" />
               </HBox.margin>
                </VBox>
         </children>
         <VBox.margin>
            <Insets top="2.0" />
         </VBox.margin>
      </HBox>
      <Text fx:id="questionField" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label-style" text="Text" textAlignment="CENTER" wrappingWidth="400.0" />
        <GridPane alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="200.0" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS" />
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS" />
            </rowConstraints>
            <children>
                <RadioButton fx:id="option1" mnemonicParsing="false" onAction="#onOptionSelected" styleClass="radio-button" text="RadioButton" wrapText="true" GridPane.vgrow="ALWAYS" />
                <RadioButton fx:id="option2" mnemonicParsing="false" onAction="#onOptionSelected" styleClass="radio-button" text="RadioButton" wrapText="true" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS" />
                <RadioButton fx:id="option3" mnemonicParsing="false" onAction="#onOptionSelected" styleClass="radio-button" text="RadioButton" wrapText="true" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
                <RadioButton fx:id="option4" mnemonicParsing="false" onAction="#onOptionSelected" styleClass="radio-button" text="RadioButton" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
            </children>
            <VBox.margin>
                <Insets left="10.0" />
            </VBox.margin>
        </GridPane>
        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="NEVER">
            <children>
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="checkAnswerButton" mnemonicParsing="false" onAction="#onCheckAnswerClick" text="check answer" />
              <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                  <children>
                      <Button fx:id="finishTestButton" alignment="CENTER_RIGHT" disable="true" mnemonicParsing="false" onAction="#onFinishTestClick" opacity="0.0" text="Finish Test" />
                  </children>
              </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
</VBox>
