<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="org.telecomnancy.project.controller.SubjectScreenController">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onReturnButtonClick" text="return"/>
            </children>
        </HBox>
        <Label fx:id="titleLabel"/>
        <ImageView fx:id="thumbnailLabel" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"/>
        <Label fx:id="descriptionLabel"/>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="beginnerButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#onClickBeginnerButton" prefWidth="150.0" text="Beginner"/>
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="intermediateButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#onClickIntermediateButton" prefWidth="150.0" text="Intermediate"/>
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="advancedButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#onClickAdvancedButton" prefWidth="150.0" text="Advanced"/>
            </children>
        </HBox>
    </children>
</VBox>
