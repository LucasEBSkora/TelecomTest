<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.telecomnancy.project.controller.SubjectScreenController" stylesheets="@style.css" styleClass="background">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                    <Label fx:id="titleLabel" styleClass="label-style">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
                </HBox>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onReturnButtonClick" text="return" />
            </children>
        </HBox>
        <ImageView fx:id="thumbnailLabel" fitHeight="300.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS" />
        <Label fx:id="descriptionLabel" VBox.vgrow="ALWAYS" styleClass="label-style"/>
        <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="beginnerButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickBeginnerButton" prefWidth="150.0" text="Beginner" />
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="intermediateButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickIntermediateButton" prefWidth="150.0" text="Intermediate" />
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="advancedButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onClickAdvancedButton" prefWidth="150.0" text="Advanced" />
            </children>
        </HBox>
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
